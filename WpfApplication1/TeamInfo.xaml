        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="球队信息" Height="511" Width="641">
    <Grid Margin="0,0,2,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="teamBox" HorizontalAlignment="Left" Height="23" Margin="23,100,0,0" VerticalAlignment="Top" Width="121" SelectionChanged="TeamSelect_SelectionChanged"/>
        <Label Content="请选择球队：" HorizontalAlignment="Left" Height="23" Margin="23,57,0,0" VerticalAlignment="Top" Width="121"/>
        <DataGrid x:Name="teamGrid" Margin="10,213,10,10">
        </DataGrid>
        <DataGrid x:Name="baseInfoGrid" HorizontalAlignment="Left" Height="160" Margin="164,38,0,0" VerticalAlignment="Top" Width="318"/>
        <Label Content="主教练" HorizontalAlignment="Left" Height="27" Margin="498,171,0,0" VerticalAlignment="Top" Width="111" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image x:Name="coachImage" HorizontalAlignment="Left" Height="128" Margin="498,43,0,0" VerticalAlignment="Top" Width="111"/>

    </Grid>
</Window>
