<Window x:Class="WpfApplication1.playerselect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择球员" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="选择球队：" HorizontalAlignment="Left" Height="31" Margin="31,35,0,0" VerticalAlignment="Top" Width="86"/>
        <Label Content="选择球员：" HorizontalAlignment="Left" Height="36" Margin="31,121,0,0" VerticalAlignment="Top" Width="86"/>
        <ComboBox Name="team" HorizontalAlignment="Left" Height="25" Margin="136,35,0,0" VerticalAlignment="Top" Width="102" SelectionChanged="team_SelectionChanged"/>
        <ComboBox Name="player" HorizontalAlignment="Left" Height="25" Margin="136,121,0,0" VerticalAlignment="Top" Width="102" SelectionChanged="player_SelectionChanged"/>
        <Button Content="查询" HorizontalAlignment="Left" Height="26" Margin="91,190,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>

    </Grid>
</Window>
