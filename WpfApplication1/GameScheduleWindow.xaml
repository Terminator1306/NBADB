<Window x:Class="WpfApplication1.GameScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="赛程" Height="367" Width="525" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView Name="list" Width="510" SelectionChanged="list_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="主队" Width="85"></GridViewColumn>
                    <GridViewColumn Header="比分" Width="85"></GridViewColumn>
                    <GridViewColumn Header="客队" Width="85"></GridViewColumn>
                    <GridViewColumn Header="时间" Width="85"></GridViewColumn>
                    <GridViewColumn Header="类型" Width="85"></GridViewColumn>
                    <GridViewColumn Header="状态" Width="85"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
