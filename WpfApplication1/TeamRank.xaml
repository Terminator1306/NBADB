<Window x:Class="WpfApplication1.TeamRank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="球队排名" Height="367" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="选择赛季：" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,20,0"/>
            <ComboBox Name="season" Width="126" Margin="0,10" SelectionChanged="season_SelectionChanged" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <DataGrid Name="rank" Grid.Row="1">

        </DataGrid>
    </Grid>
</Window>
